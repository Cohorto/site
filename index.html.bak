<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cohorto Landing Page</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- GSAP CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&family=Fira+Mono:wght@400;500&display=swap" rel="stylesheet">
  <style>
    /* Custom Styling */
    body {
      font-family: 'Space Grotesk', sans-serif;
      background-color: #f6f4ef; /* Cream */
      color: #1a1a1a; /* Black */
    }
    .mono {
      font-family: 'Fira Mono', monospace;
    }
    /* Custom Scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
    }
    ::-webkit-scrollbar-thumb {
      background: #1a1a1a;
      border-radius: 8px;
    }
    ::-webkit-scrollbar-thumb:hover {
      background: #333333;
    }
  </style>
</head>
<body class="bg-f6f4ef text-black">

  <!-- Navbar -->
  <nav class="flex justify-between items-center py-4 px-6 bg-black text-white fixed w-full z-50">
    <div class="flex items-center space-x-4">
      <div class="w-10 h-10 bg-gray-700 rounded-full"></div> <!-- Placeholder Logo -->
      <h1 class="text-xl font-bold tracking-wide">Cohorto</h1>
    </div>
    <div class="flex items-center space-x-6">
      <a href="#" class="hover:text-gray-400">Features</a>
      <a href="#" class="hover:text-gray-400">How It Works</a>
      <a href="#" class="hover:text-gray-400">Testimonials</a>
      <a href="#" class="px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white rounded-lg">Schedule a Call</a>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="h-screen flex flex-col justify-center items-center bg-cream relative overflow-hidden">
    <div class="text-center px-4 mt-16">
      <h1 class="text-5xl md:text-6xl font-bold mb-4">Your Dream Team, <span class="text-gray-800">Redefined</span></h1>
      <p class="text-lg md:text-xl text-gray-600 mb-8">
        Affordable, student-driven freelancing teams delivering exceptional results.
      </p>
      <div class="space-x-4">
        <a href="#" class="px-6 py-3 bg-black hover:bg-gray-900 rounded-lg text-white text-lg font-medium transition-all">
          Hire a Cohort Now
        </a>
        <a href="#" class="px-6 py-3 bg-gray-200 hover:bg-gray-300 rounded-lg text-black text-lg font-medium transition-all">
          Join as a Student
        </a>
      </div>
    </div>
    <div class="absolute inset-0 opacity-10">
      <!-- Placeholder for Background Animation -->
      <canvas id="hero-bg"></canvas>
    </div>
  </section>

  <!-- Why Cohorto Section -->
  <section class="py-16 px-6 md:px-16 bg-cream">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">Why Cohorto?</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Features -->
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 bg-black rounded-full flex items-center justify-center text-white">
          <span class="text-2xl font-bold">1</span>
        </div>
        <h3 class="text-2xl font-semibold mb-2">Student-Exclusive Platform</h3>
        <p class="text-gray-600">A space where students shine and clients save.</p>
      </div>
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 bg-black rounded-full flex items-center justify-center text-white">
          <span class="text-2xl font-bold">2</span>
        </div>
        <h3 class="text-2xl font-semibold mb-2">Affordable Expertise</h3>
        <p class="text-gray-600">Top-tier work at rates that won't break the bank.</p>
      </div>
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 bg-black rounded-full flex items-center justify-center text-white">
          <span class="text-2xl font-bold">3</span>
        </div>
        <h3 class="text-2xl font-semibold mb-2">Cohorts, Not Individuals</h3>
        <p class="text-gray-600">Teams of skilled students delivering end-to-end solutions.</p>
      </div>
    </div>
  </section>

  <!-- Vertical Timeline -->
  <section class="py-16 bg-cream px-6 md:px-16">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">Meet the Cohorts</h2>
    <div class="relative">
      <div class="absolute w-1 bg-black left-1/2 transform -translate-x-1/2 h-full"></div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div class="relative py-8">
          <div class="absolute w-4 h-4 bg-black rounded-full left-1/2 transform -translate-x-1/2 -translate-y-1/2"></div>
          <div class="bg-gray-100 p-6 rounded-lg shadow-md">
            <h3 class="text-2xl font-bold mb-2">Full-Stack Development Cohort</h3>
            <p class="text-gray-600">From front-end designs to back-end architecture, we've got it covered.</p>
          </div>
        </div>
        <div class="relative py-8">
          <div class="absolute w-4 h-4 bg-black rounded-full left-1/2 transform -translate-x-1/2 -translate-y-1/2"></div>
          <div class="bg-gray-100 p-6 rounded-lg shadow-md">
            <h3 class="text-2xl font-bold mb-2">Design Cohort</h3>
            <p class="text-gray-600">Creative minds crafting compelling visuals and user experiences.</p>
          </div>
        </div>
        <div class="relative py-8">
          <div class="absolute w-4 h-4 bg-black rounded-full left-1/2 transform -translate-x-1/2 -translate-y-1/2"></div>
          <div class="bg-gray-100 p-6 rounded-lg shadow-md">
            <h3 class="text-2xl font-bold mb-2">Marketing Cohort</h3>
            <p class="text-gray-600">Strategies that drive results and elevate your brand.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 bg-gray-100">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">What People Are Saying</h2>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="p-6 bg-gray-200 rounded-lg shadow-lg">
          <p class="text-lg mb-4">"Cohorto gave me my first real-world project and a chance to work with amazing clients!"</p>
          <h4 class="text-xl font-semibold">Sarah M.</h4>
        </div>
        <div class="p-6 bg-gray-200 rounded-lg shadow-lg">
          <p class="text-lg mb-4">"Hiring a student cohort was the best decision we madeâ€”quality work at an unbeatable price."</p>
          <h4 class="text-xl font-semibold">David L.</h4>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-black text-white py-8">
    <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center px-6">
      <div>
        <h3 class="text-xl font-bold">Cohorto</h3>
        <p class="text-gray-400 text-sm">Building the future, one cohort at a time.</p>
      </div>
      <div class="flex space-x-4 mt-4 md:mt-0">
        <a href="#" class="text-gray-400 hover:text-white">GitHub</a>
        <a href="#" class="text-gray-400 hover:text-white">LinkedIn</a>
        <a href="#" class="text-gray-400 hover:text-white">Email</a>
      </div>
    </div>
  </footer>

  <!-- GSAP Animations -->
  <script>
    // Register ScrollTrigger plugin
    gsap.registerPlugin(ScrollTrigger);

    // Hero Section Animation
    gsap.from("h1, h2", {
      opacity: 0,
      y: 50,
      duration: 1,
      scrollTrigger: {
        trigger: "h1, h2",
        start: "top 80%",
        end: "top 50%",
        toggleActions: "play none none reverse",
      },
    });

    // Vertical Timeline Animations
    gsap.utils.toArray(".relative").forEach((el, i) => {
      gsap.from(el, {
        opacity: 0,
        y: 100,
        duration: 1,
        scrollTrigger: {
          trigger: el,
          start: "top 85%",
          toggleActions: "play none none reverse",
        },
      });
    });

    // Testimonial Animations
    const testimonials = document.querySelectorAll(".grid div");
    testimonials.forEach((testimonial, i) => {
      gsap.from(testimonial, {
        opacity: 0,
        y: 50,
        duration: 0.8,
        delay: i * 0.2,
        scrollTrigger: {
          trigger: testimonial,
          start: "top 90%",
        },
      });
    });
  </script>
</body>
</html>

